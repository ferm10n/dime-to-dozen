{
  "fmt": {
    "singleQuote": true,
    "trailingCommas": "onlyMultiLine"
  },
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --watch --allow-env --allow-net --allow-read server/main.ts",
    "db:push": "deno --env -A --node-modules-dir npm:drizzle-kit push",
    "deploy": "deployctl deploy '--include=dist,server,deno.*' --project=dime-to-dozen --entrypoint=server/main.ts --prod"
  },
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@neondatabase/serverless": "npm:@neondatabase/serverless@^1.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/http": "jsr:@std/http@^1.0.17",
    "@vitejs/plugin-vue": "npm:@vitejs/plugin-vue@^5.2.1",
    "@vueuse/core": "npm:@vueuse/core@^13.3.0",
    "drizzle-kit": "npm:drizzle-kit@^0.31.1",
    "drizzle-orm": "npm:drizzle-orm@^0.44.1",
    "drizzle-zod": "npm:drizzle-zod@^0.8.2",
    "pinia": "npm:pinia@^3.0.2",
    "vite": "npm:vite@^6.1.1",
    "vue": "npm:vue@^3.5.13",
    "vue-router": "npm:vue-router@^4.3.0",
    "zod": "npm:zod@^3.25.46"
  },
  "deploy": {
    "project": "e2c658e2-0ab0-4ea1-b5b6-b2fd2d583d1a",
    "exclude": [
      "**/node_modules"
    ],
    "include": [
      "dist",
      "server",
      "deno.*"
    ],
    "entrypoint": "server/main.ts"
  },
  "nodeModulesDir": "auto"
}
